{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build AffinityManager (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "-o",
                "AffinityManager.exe",
                "-municode",
                "-static",
                "-lstdc++",
                "-lole32",
                "-loleaut32",
                "-lwbemuuid",
                "-lpowrprof"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
